{
  "name": "truman-virtual-tour",
  "version": "1.0.0",
  "description": "An immersive 3D virtual tour experience for Truman State University",
  "main": "Frontend/index.html",
  "scripts": {
    "dev": "cd Frontend && python3 dev-server.py",
    "start": "node Backend/server.js",
    "start:clean": "lsof -ti :3000 | xargs kill -9 2>/dev/null; node Backend/server.js",
    "frontend": "cd Frontend && python3 -m http.server 8000",
    "backend": "cd Backend && npm start",
    "build": "echo 'Static build - no build step required'",
    "update-readme": "python3 update_readme.py"
  },
  "keywords": [
    "truman",
    "virtual-tour",
    "3d",
    "skybox",
    "threejs",
    "react",
    "campus",
    "university"
  ],
  "authors": [
    "Pranaya Khadgi Shahi",
    "Ali Musterih Addikebir"
  ],
  "professor": "Dr. Kaafi Rahman",
  "institution": "Truman State University",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pranayakhadgi/Truman-in-the-Virtual"
  },
  "homepage": "https://truman-in-the-virtual.vercel.app",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "mongoose": "^8.19.3",
    "uuid": "^13.0.0",
    "validator": "^13.15.20",
    "snyk": "^1.1300.0"
  }
}
